<div class="site-section bg-light" id="section-services">
    <div class="container">
        <div class="row justify-content-center mb-5" data-aos="fade-up">
            <div class="col-md-7 text-center border-primary">
                <h2 class="mb-0 text-primary">Our Services</h2>
                <p class="color-black-opacity-5">Lorem ipsum dolor sit amet.</p>
            </div>
        </div>
        <div class="row align-items-stretch">
            {% set delay = 0 %}
            {% for service in services %}
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="{{ delay }}">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon mr-4"><span class="text-primary {{ service.meta('icon') }}"></span></div>
                    <div>
                    <h3>{{ service.title }}</h3>
                    <p>{{ service.post_excerpt }}</p>
                    <p><a href="{{ service.link }}">Learn More</a></p>
                    </div>
                </div>
                </div>
                {% set delay = delay + 100 %}
            {% endfor %}
        </div>
    </div>
</div>