    <link rel="stylesheet" href="{{theme.link}}/assets/fonts/icomoon/style.css">
    <link rel="stylesheet" href="{{theme.link}}/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{theme.link}}/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="{{theme.link}}/assets/css/jquery-ui.css">
    <link rel="stylesheet" href="{{theme.link}}/assets/css/owl.carousel.min.css">
