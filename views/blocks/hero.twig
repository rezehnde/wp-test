<div class="site-blocks-cover overlay" style="background-image: url( {{ fields.background_image }} );" data-aos="fade" data-stellar-background-ratio="0.5" id="section-home">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold" data-aos="fade-up">{{ fields.title }}</h1>
                <p class="mb-5" data-aos="fade-up" data-aos-delay="100">{{ fields.subtitle }}</p>
                <p data-aos="fade-up" data-aos-delay="200"><a href="{{ fields.button_url}}" class="btn btn-primary py-3 px-5 text-white">{{ fields.button_text }}</a></p>
            </div>
        </div>
    </div>
</div>  